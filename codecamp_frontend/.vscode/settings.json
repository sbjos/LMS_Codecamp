{
  // for icons go to: https://microsoft.github.io/vscode-codicons/dist/codicon.html

  "todo-tree.tree.scanMode": "workspace only",

  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text-and-comment",
    "foreground": "black",
    "background": "white",
    "opacity": 50,
    "iconColour": "green",
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "foreground": "black",
      "background": "white",
      "iconColour": "white"
    },
    "NOTE": {
      "icon": "note",
      "foreground": "white",
      "background": "gray",
      "iconColour": "gray"
    },
    "COMMENT": {
      "icon": "comment",
      "foreground": "white",
      "background": "gray",
      "iconColour": "gray"
    },
    "FIXME": {
      "foreground": "black",
      "background": "yellow",
      "iconColour": "yellow"
    },
    "BUG": {
      "foreground": "black",
      "background": "red",
      "iconColour": "red"
    },
    "[ ]": {
      "icon": "checklist",
      "foreground": "black",
      "background": "white",
      "iconColour": "yellow"
    },
    "[x]": {
      "icon": "checklist",
      "foreground": "white",
      "background": "green",
      "iconColour": "green"
    },
    "CONSOLE": {
      "icon": "desktop-download",
      "foreground": "brown",
      "background": "beige",
      "iconColour": "beige"
    }
  },
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "NOTE",
    "COMMENT",
    "[ ]",
    "[x]",
    "CONSOLE"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS).*(\\n\\s*//\\s{2,}.*)*"
}
